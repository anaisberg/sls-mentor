{
  "name": "@sls-mentor/documentation",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENSED",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist *.tsbuildinfo",
    "dev": "pnpm run generate-sidebar && pnpm run generate-docs && docusaurus start",
    "format-check": "prettier --check . ../../.prettierignore",
    "format-fix": "prettier --write . ../../.prettierignore",
    "generate-docs": "npx ts-node src/scripts/generate-docs.ts",
    "generate-sidebar": "npx ts-node src/scripts/generateSidebar.ts",
    "lint-fix": "pnpm linter-base-config --fix",
    "lint-fix-all": "pnpm lint-fix .",
    "linter-base-config": "eslint --ext=js,ts",
    "package": "pnpm clean && pnpm run generate-sidebar && pnpm run generate-docs && docusaurus build --out-dir dist",
    "package-transpile": "tsup",
    "package-types": "tsc -p tsconfig.build.json",
    "package-types-aliases": "tsc-alias -p tsconfig.build.json",
    "test": "nx run format-check && nx run test-linter && nx run test-type && nx run test-unit && nx run test-circular",
    "test-circular": "pnpm depcruise --config -- src",
    "test-linter": "pnpm linter-base-config .",
    "test-type": "tsc --noEmit --emitDeclarationOnly false",
    "test-unit": "vitest run --coverage --passWithNoTests",
    "watch": "pnpm clean dist && concurrently 'pnpm:package-* --watch'"
  },
  "dependencies": {
    "@algolia/client-search": ">= 4.9.1 < 6",
    "@docusaurus/core": "2.2.0",
    "@docusaurus/preset-classic": "2.2.0",
    "@iconscout/react-unicons": "^1.1.6",
    "@mdx-js/react": "^1.6.22",
    "@sls-mentor/rules": "workspace:^",
    "@types/react": "^18.0.26",
    "clsx": "^1.2.1",
    "lodash": "^4.17.21",
    "prism-react-renderer": "^1.3.5",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "2.2.0",
    "@docusaurus/plugin-google-gtag": "^2.3.1",
    "@docusaurus/theme-classic": "^2.2.0",
    "@docusaurus/types": "^2.2.0",
    "@tsconfig/docusaurus": "^1.0.6",
    "@types/lodash": "^4.14.198",
    "@types/node": "^20.6.0",
    "@vitest/coverage-c8": "0.30.0",
    "concurrently": "^8.2.1",
    "dependency-cruiser": "^13.1.5",
    "eslint": "^8.49.0",
    "json-schema-to-ts": "^2.9.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "tsup": "^7.2.0",
    "typescript": "^5.0.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "0.30.0"
  }
}
